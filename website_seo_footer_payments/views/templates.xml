<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Payment Methods ENABLED website_payment -->
    <template id="remove_payment" inherit_id="website_payment.header_footer_custom_payment" customize_show="False" active="True" name="SEO Remove Payment Method">
        <xpath expr="(//footer//div[@id='info'])" position="replace"/>
    </template>

    <template id="footer_payment" inherit_id="website.footer_default" customize_show="True" active="True" name="SEO Payment Methods">
        <xpath expr="//div[@id='info']" position="inside">
            <strong class="seo_title4 payment_method_title">Payment Method</strong>
            <ul class="payment_method_list list-inline">
                <t t-foreach="request.website.payment_acquirers()" t-as="acquirer">
                    <li>
                        <span t-field="acquirer.image_small" t-options='{"widget": "image", "alt-field": "name"}' />
                    </li>
                </t>
            </ul>
        </xpath>
    </template>

</odoo>
